<!DOCTYPE html>
<html>
<head>
  <title>Selector condicional</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function() {
      $('#departmentSelect').change(function() {
        var department = $(this).val();

        $('#provinceSelect').empty().append("<option value=''>Seleccionar provincia</option>");
        $('#districtSelect').empty().append("<option value=''>Seleccionar distrito</option>");

        if (department === 'Amazonas') {
          var provinces = [
            "Chachapoyas",
            "Bagua",
            "Bongará",
            "Condorcanqui",
            "Luya",
            "Rodríguez de Mendoza",
            "Utcubamba"
          ];

          $.each(provinces, function(index, value) {
            $('#provinceSelect').append("<option value='" + value + "'>" + value + "</option>");
          });
        }
      });

      $('#provinceSelect').change(function() {
        var province = $(this).val();

        $('#districtSelect').empty().append("<option value=''>Seleccionar distrito</option>");

        if (province === 'Chachapoyas') {
          var districts = [
            "Chachapoyas",
            "Asunción",
            "Balsas",
            "Cheto",
            "Chiliquin",
            "Chuquibamba",
            "Granada",
            "Huancas",
            "La Jalca",
            "Leimebamba",
            "Levanto",
            "Magdalena",
            "Mariscal Castilla",
            "Molinopampa",
            "Montevideo",
            "Olleros",
            "Quinjalca",
            "San Francisco de Daguas",
            "San Isidro de Maino",
            "Soloco",
            "Sonche"
          ];

          $.each(districts, function(index, value) {
            $('#districtSelect').append("<option value='" + value + "'>" + value + "</option>");
          });
        }
      });
    });
  </script>
</head>
<body>
  <h3>Selector condicional</h3>
  <form>
    <label for="departmentSelect">Departamento:</label>
    <select id="departmentSelect">
      <option value="">Seleccionar departamento</option>
      <option value="Amazonas">Amazonas</option>
      <option value="Áncash">Áncash</option>
    </select>
    <br><br>
    <label for="provinceSelect">Provincia:</label>
    <select id="provinceSelect">
      <option value="">Seleccionar provincia</option>
    </select>
    <br><br>
    <label for="districtSelect">Distrito:</label>
    <select id="districtSelect">
      <option value="">Seleccionar distrito</option>
    </select>
  </form>
</body>
</html>
